@model ASP.NET_Partial.Models.Product

<div class="col-sm-6 col-md-4 col-lg-3">
    <div class="box">
        <div class="option_container">
            <div class="options">
                <a asp-page="" class="option1">
                    @Model.Description
                </a>
                <a asp-page="" class="option2">
                    Buy Now
                </a>
            </div>
        </div>
        <div class="img-box">
            <img src="images/@Model.ImgPath" alt="@Model.Name">
        </div>
        <div class="detail-box">
            <h5>
                @Model.Name
            </h5>
            <h6>
                @Model.Price
            </h6>
        </div>
    </div>
</div>
